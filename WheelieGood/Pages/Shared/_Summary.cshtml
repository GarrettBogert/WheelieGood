@model WheelieGood.Core.Bike 

    <div class="panel panel-default">
        <div class="panel-heading">
            <h3>@Model.Make</h3>
        </div>
        <div class="panel-body">
          <span>HP: @Model.HP</span>
            <span>Weight: @Model.Wet_Weight</span>
        </div>
        <div class="panel-footer">
            <a class="btn btn-lg" asp-page="./Detail" asp-route-bikeId="@Model.Id">
                <i class="fas fa-camera"></i>
            </a>
            <a class="btn btn-lg" asp-page="./Edit" asp-route-bikeId="@Model.Id">
                <i class="fas fa-edit"></i>
            </a>
            <a class="btn btn-lg" asp-page="./Delete" asp-route-bikeId="@Model.Id">
                <i class="fas fa-trash"></i>
            </a>
        </div>
    </div>
